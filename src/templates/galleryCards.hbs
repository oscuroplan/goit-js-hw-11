{{#each this}}
<div class="img-card">
    <a class="gallery__link" href={{largeImageURL}}>
        <img src="{{webformatURL}}" alt="{{tags}}" loading="lazy" />
    </a>
    <div class="info">
        <p class="info_item">
            <b>Likes </b><br>{{likes}}
        </p>
        <p class="info_item">
            <b>Views</b> <br>{{views}}
        </p>
        <p class="info_item">
            <b>Comments</b> <br>{{comments}}
        </p>
        <p class="info_item">
            <b>Downloads</b> <br>{{downloads}}
        </p>
    </div>
</div>
{{/each}}